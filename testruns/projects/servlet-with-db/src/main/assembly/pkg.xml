      <directoryMode>755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>src/main/modules</directory>
      <!--outputDirectory>jboss-install/modules</outputDirectory-->
      <outputDirectory>modules</outputDirectory>
    </fileSet>
